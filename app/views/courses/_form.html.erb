<%= form_with(model: course, local: true) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% course.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :course_name %>
  </div>

  <div class="field">
    <%= form.label :term %>
    <%= form.text_field :term, id: :course_name %>
  </div>

  <div class="field">
    <%= form.label :course_organization %>
    <%= form.text_field :course_organization, id: :course_name %>
  </div>

  <div class="field">
    <%= form.label :github_webhooks_enabled %>
    <%= form.check_box :github_webhooks_enabled, id: :course_github_webhooks_enabled %>
  </div>

  <div class="field">
    <%= form.label :hidden %>
    <%= form.check_box :hidden %>
  
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">Sprints</div>
    </div>
    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Start date</th>
            <th>End date</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @sprints.each do |sprint| %>
                <tr>
                  <td><%= sprint.name %></td>
                  <td><%= sprint.start_date %></td>
                  <td><%= sprint.end_date %></td>
                  <td><%= link_to 'Show', course_sprint_path(course, sprint) %></td>
                  <td><%= link_to 'Edit', edit_course_sprint_path(course, sprint) %></td>
                  <td><%= link_to 'Destroy', course_sprint_path(course, sprint), method: :delete, data: { confirm: 'Are you sure?' }
          %></td>
                </tr>
        <% end %>

        </tbody>
      </table>
      <%= link_to 'New Sprint', new_course_sprint_path(@course) %>
    </div>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
