<% if (current_user.has_role? :admin) || (current_user.instructor_of? @course) %>
  <%= render 'show_admin', course: Course.new %>
<% elsif current_user.enrolled_in? @course  %>
  <%= render 'show_student', course: Course.new %>
<% else  %>
  <%= redirect_to root_path, alert: "You do not have permission to see course #{params[:id]}" %>
<% end %>
