<% if !user_signed_in? %>
  <%= render 'splash' %>
<% else %>
  <% if current_user.courses.length == 0 %>
    <h1> Welcome! </h1>
    <p>You are not enrolled in any courses at the moment! <strong> Please take a moment to visit the courses list in the navigation header, and join the class you are enrolled in. </strong> </h1>
    <p>Once you are enrolled in a class you will be able to access your classes from this page</p>
  <% else %>
    <h1> Welcome! </h1>
    <ul class="list-group">
      <% current_user.courses.each do |course| %>
        <li class="list-group-item justify-content-between">
          <% course.title %>
          <%# note that we can easily add notificatio for courses with announcements etc %>
          <%# <span class="badge badge-default badge-pill">1</span> %>
        </li>
      <% end %>
    </ul>

  <% end %>
<%end%>